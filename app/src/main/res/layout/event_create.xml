<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--android:theme="@android:style/Theme.Translucent.NoTitleBar">-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create an Run Event!!"
        android:textSize="24sp"
        android:textStyle="bold"
        android:paddingTop="10dp"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp">
        <TextView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="Event name: "
            android:textSize="18sp"/>
        <EditText
            android:layout_width="100dp"
            android:inputType="text"
            android:layout_height="wrap_content"
            android:id="@+id/ename"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp">
        <TextView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="Date: "
            android:textSize="18sp"/>

        <EditText
            android:layout_width="100dp"
            android:inputType="date"
            android:layout_height="wrap_content"
            android:id="@+id/edate"/>

        <ImageButton
            android:id="@+id/imageButton1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@+id/eDate"
            android:layout_toRightOf="@+id/editText"
            android:contentDescription="@string/selectdate"
            android:cropToPadding="true"
            android:src="@drawable/calender" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp">
        <TextView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="Start time: "
            android:textSize="18sp"/>
        <EditText
            android:layout_width="100dp"
            android:inputType="time"
            android:layout_height="wrap_content"
            android:id="@+id/stime"/>
        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignBottom="@+id/eDate"
            android:layout_toRightOf="@+id/stime"
            android:cropToPadding="true"
            android:src="@drawable/clock" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp">
        <TextView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="End time: "
            android:textSize="18sp"/>
        <EditText
            android:layout_width="100dp"
            android:inputType="time"
            android:layout_height="wrap_content"
            android:id="@+id/etime"/>
        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignBottom="@+id/eDate"
            android:layout_toRightOf="@+id/stime"
            android:cropToPadding="true"
            android:src="@drawable/clock" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingBottom="20dp">
        <TextView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="Event Location: "
            android:textSize="18sp"/>
        <EditText
            android:layout_width="100dp"
            android:inputType="text"
            android:layout_height="wrap_content"
            android:id="@+id/eloc"/>
    </LinearLayout>

    <Button
        android:layout_width="110dp"
        android:layout_height="30dp"
        android:background="@drawable/buttonshape"
        android:layout_gravity="center"
        android:id="@+id/invite"
        android:textStyle="bold"
        android:textSize="12sp"
        android:text=" Invite "
        android:textColor="#ffffff"
        android:drawableRight="@drawable/invite"/>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="10dp"
    android:orientation="horizontal">
    <Button
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:text=" Done "
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:textSize="12sp"
        android:drawableRight="@drawable/ok"
        android:id="@+id/submit"
        android:background="@drawable/buttonshape"
       />
    <TextView
        android:layout_width="15dp"
        android:layout_height="wrap_content"
        />
    <Button
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:text=" Cancel "
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:textSize="12sp"
        android:drawableRight="@drawable/cancel"
        android:id="@+id/cancel"
        android:background="@drawable/buttonshape"/>
</LinearLayout>


</LinearLayout>